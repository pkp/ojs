<schema version="0.2">
	<!--
	  *
	  * TABLE scheduled_tasks
	  *
	  -->
	<table name="scheduled_tasks">
		<field name="class_name" type="C2" size="255">
			<NOTNULL/>
		</field>
		<field name="last_run" type="T" />
		<descr>The last run times of all scheduled tasks.</descr>
		<index name="scheduled_tasks_pkey">
			<col>class_name</col>
			<UNIQUE />
		</index>
	</table>
</schema>
