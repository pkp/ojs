  *
  * Remove the setting_type column from the journal_settings and site_settings
	* tables. This column is obsolete now that we use the context.json schema to
	* define setting types.
  *
  -->

<data>
	<sql>
		<query>
			ALTER TABLE journal_settings DROP COLUMN setting_type
		</query>
		<query>
			ALTER TABLE site_settings DROP COLUMN setting_type
		</query>
	</sql>
</data>
