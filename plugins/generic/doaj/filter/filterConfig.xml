<filterConfig>
	<filterGroups>
		<!-- DOAJ XML article output -->
		<filterGroup
			symbolic="article=>doaj-xml"
			displayName="plugins.importexport.doaj.displayName"
			description="plugins.importexport.doaj.description"
			inputType="class::classes.submission.Submission[]"
			outputType="xml::schema(plugins/generic/doaj/doajArticles.xsd)" />
		<!-- DOAJ JSON article output -->
		<filterGroup
			symbolic="article=>doaj-json"
			displayName="plugins.importexport.doaj.displayName"
			description="plugins.importexport.doaj.description"
			inputType="class::classes.submission.Submission"
			outputType="primitive::string" />
		<!-- DOAJ XML publication output -->
		<filterGroup
			symbolic="publication=>doaj-xml"
			displayName="plugins.importexport.doaj.displayName"
			description="plugins.importexport.doaj.description"
			inputType="class::classes.publication.Publication[]"
			outputType="xml::schema(plugins/generic/doaj/doajArticles.xsd)" />
		<!-- DOAJ JSON publication output -->
		<filterGroup
			symbolic="publication=>doaj-json"
			displayName="plugins.importexport.doaj.displayName"
			description="plugins.importexport.doaj.description"
			inputType="class::classes.publication.Publication"
			outputType="primitive::string" />
	</filterGroups>
	<filters>
		<!-- DOAJ XML article output -->
		<filter
			inGroup="article=>doaj-xml"
			class="APP\plugins\generic\doaj\filter\DOAJXmlFilter"
			isTemplate="0" />
		<!-- DOAJ JSON article output -->
		<filter
			inGroup="article=>doaj-json"
			class="APP\plugins\generic\doaj\filter\DOAJJsonFilter"
			isTemplate="0" />
		<!-- DOAJ XML publication output -->
		<filter
			inGroup="publication=>doaj-xml"
			class="APP\plugins\generic\doaj\filter\DOAJXmlFilter"
			isTemplate="0" />
		<!-- DOAJ JSON publication output -->
		<filter
			inGroup="publication=>doaj-json"
			class="APP\plugins\generic\doaj\filter\DOAJJsonFilter"
			isTemplate="0" />
	</filters>
</filterConfig>
