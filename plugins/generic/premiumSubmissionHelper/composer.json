{
    "name": "ojs/premium-submission-helper",
    "description": "Plugin d'aide Ã  la soumission pour utilisateurs premium",
    "type": "ojs-plugin",
    "license": "GPL-3.0-only",
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "APP\\plugins\\generic\\premiumSubmissionHelper\\": "./"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=phpcs.xml",
        "cs-fix": "phpcbf --standard=phpcs.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
