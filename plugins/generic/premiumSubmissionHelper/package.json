{
  "name": "ojs-premium-submission-helper",
  "version": "1.0.0",
  "description": "Plugin OJS pour l'analyse avancée des résumés pour les utilisateurs premium",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salioungom/ojs-premium-submission-helper.git"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest -u",
    "test:ci": "jest --ci --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@testing-library/jest-dom": "^6.1.5",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "keywords": [
    "ojs",
    "plugin",
    "premium",
    "submission",
    "helper",
    "analysis"
  ],
  "overrides": {
    "@babel/preset-env": {
      "core-js": "^3.35.0"
    }
  }
}
