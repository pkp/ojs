	<message key="plugins.pubIds.urn.editor.urn">URN</message>
	<message key="plugins.pubIds.urn.form.customIdentifierNotUnique">O sufixo URN informado já está em uso por outro item publicado. Informe um sufixo URN único para cada item.</message>
	<!-- errors -->
	<message key="plugins.pubIds.urn.form.checkNoRequired">Número de verificação faltando.</message>

