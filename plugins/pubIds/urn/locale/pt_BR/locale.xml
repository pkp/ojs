	<message key="plugins.pubIds.urn.displayName">URN</message>

	<!-- settings form -->
	<message key="plugins.pubIds.urn.manager.settings.urnObjects">Conteúdo</message>
	<message key="plugins.pubIds.urn.manager.settings.urnObjectsRequired">Escolha a quais objetos serão atribuídos URNs.</message>
	<message key="plugins.pubIds.urn.manager.settings.enableIssueURN">URNs serão atribuídos a edições.</message>
	<message key="plugins.pubIds.urn.manager.settings.enableSubmissionURN">URNs serão atribuídos a artigos</message>
	<message key="plugins.pubIds.urn.manager.settings.enableRepresentationURN">URNs serão atribuídos a composições (ex.: arquivos HTML e/ou PDF).</message>

	<message key="plugins.pubIds.urn.manager.settings.urnPrefix">Prefixo URN</message>
	<message key="plugins.pubIds.urn.manager.settings.urnPrefix.description">O prefixo URN é a parte fixa, inalterável do URN (ex.: "urn:nbn:de:0000-").</message>
	<message key="plugins.pubIds.urn.manager.settings.form.urnPrefixPattern"><![CDATA[O padrão de prefixo URN deve ser na forma "urn:"&lt;NID&gt;":"&lt;NSS&gt;.]]></message>

	<message key="plugins.pubIds.urn.manager.settings.urnSuffix">Sufixo URN</message>
	<message key="plugins.pubIds.urn.manager.settings.urnSuffixPattern.example">Por examplo, vol%viss%ipp%p poderiam criar um sufixo URN com estrutura "vol3iss2pp230".</message>
	<message key="plugins.pubIds.urn.manager.settings.urnSuffixPattern.issues">para edições</message>
	<message key="plugins.pubIds.urn.manager.settings.urnSuffixPattern.submissions">para artigos</message>
	<message key="plugins.pubIds.urn.manager.settings.urnSuffixPattern.representations">para composições</message>
	<message key="plugins.pubIds.urn.manager.settings.urnIssueSuffixPatternRequired">Informe um padrão de sufixo URN para edições.</message>
	<message key="plugins.pubIds.urn.manager.settings.urnSubmissionSuffixPatternRequired">Informe um padrão de sufixo URN para artigos.</message>
	<message key="plugins.pubIds.urn.manager.settings.urnRepresentationSuffixPatternRequired">Informe um padrão de sufixo URN para composições.</message>
	<message key="plugins.pubIds.urn.manager.settings.urnSuffix.default">Usar padrões predefinidos.</message>
	<message key="plugins.pubIds.urn.manager.settings.checkNo">Número de verificação</message>
	<message key="plugins.pubIds.urn.manager.settings.checkNo.label">O número de verificação será automaticamente calculado e incluído no final, como o último dígito de um URN.</message>
	<message key="plugins.pubIds.urn.manager.settings.namespace">Namespace</message>
	<message key="plugins.pubIds.urn.manager.settings.namespace.choose">Escolha</message>
	<message key="plugins.pubIds.urn.manager.settings.namespace.description">O namespace identificador persistente é normalmente necessário para registro (por exemplo, na Deutsche Nationalbibliothek).</message>

